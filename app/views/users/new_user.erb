<h1>Create a new user</h1>
<br>
<p>As a non-administrator user, only read access will be granted.</p>

<!--SHOW ERROR MESSAGES IF INVALID USER CREATED-->
<% if !!@user.errors.messages%>
    <ul>
        <% @user.errors.messages.each do |key, value| %>
            <li><%=key%> <%=value.first%></li>
        <%end%>
    </ul>
<%end%>


<form action="/new-user" method="POST">
    <label for="user[name]">Username:</label>
    <br>
    <input type="text" name="user[username]">
    <br>
    <br>
    <label for="user[email]">Email:</label>
    <br>
    <input type="text" name="user[email]">
    <br>
    <br>
    <label for="user[password]">Password:</label>
    <br>
    <input type="password" name="user[password]">
    <br>
    <br>
    <input type="submit" id="submit" value="Create user">
</form>
<br>

<a href='/admin'>Back to admin console</a>